version: '3.8'

services:
  postgres:
    image: postgres:16-alpine
    container_name: mymemorycard-db
    environment:
      POSTGRES_USER: mymemorycard
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_DB: mymemorycard
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./backend/init.sql:/docker-entrypoint-initdb.d/01-init.sql
      - ./docs/schema.sql:/docker-entrypoint-initdb.d/02-schema.sql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U mymemorycard"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - mymemorycard-network

  redis:
    image: redis:7-alpine
    container_name: mymemorycard-redis
    volumes:
      - redis_data:/data
    networks:
      - mymemorycard-network

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: mymemorycard-backend
    environment:
      DATABASE_URL: postgresql://mymemorycard:${DB_PASSWORD}@postgres:5432/mymemorycard
      REDIS_URL: redis://redis:6379
      JWT_SECRET: ${JWT_SECRET}
      RAWG_API_KEY: ${RAWG_API_KEY}
      IGDB_CLIENT_ID: ${IGDB_CLIENT_ID}
      IGDB_CLIENT_SECRET: ${IGDB_CLIENT_SECRET}
      PORT: 3000
      NODE_ENV: production
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_started
    ports:
      - "3000:3000"
    volumes:
      - ./backend:/app
      - /app/node_modules
    restart: unless-stopped
    networks:
      - mymemorycard-network

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile.dev
    container_name: mymemorycard-frontend
    environment:
      DOCKER: "true"
    depends_on:
      - backend
    ports:
      - "5173:5173"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    restart: unless-stopped
    networks:
      - mymemorycard-network

volumes:
  postgres_data:
  redis_data:

networks:
  mymemorycard-network:
    driver: bridge
