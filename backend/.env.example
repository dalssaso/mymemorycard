# Backend Environment Variables
# Copy this file to .env and customize for your environment

# Database Connection
# PostgreSQL connection string for the application
# Default: postgresql://mymemorycard:devpassword@localhost:5433/mymemorycard
DATABASE_URL=postgresql://mymemorycard:devpassword@localhost:5433/mymemorycard

# Redis Connection
# Redis connection string for caching
# Default: redis://localhost:6380
REDIS_URL=redis://localhost:6380

# Authentication
# JWT secret for signing tokens (CHANGE IN PRODUCTION!)
# Default: dev-jwt-secret-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# External Services
# RAWG API key for game metadata (get yours at https://rawg.io/apidocs)
RAWG_API_KEY=your_rawg_api_key_here

# Server Configuration
# Port for the backend server
# Default: 3000
PORT=3000

# Additional CORS origin (optional)
# Add if frontend runs on a different origin
# ORIGIN=http://localhost:5173

# Test Configuration (for integration tests)
# PostgreSQL connection string for integration tests
# Defaults to same as DATABASE_URL if not set
# TEST_DATABASE_URL=postgresql://mymemorycard:devpassword@localhost:5433/mymemorycard

# API Base URL for integration tests (optional)
# Default: http://localhost:3000
# API_BASE_URL=http://localhost:3000
