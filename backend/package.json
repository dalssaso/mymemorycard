{
  "name": "gamelist-backend",
  "version": "1.0.0",
  "description": "Game library management backend with Bun",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:migrate": "bun src/db/migrate.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "@simplewebauthn/server": "^9.0.3",
    "redis": "^4.6.12",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.11.0",
    "bun-types": "latest",
    "typescript": "^5.9.3"
  }
}
