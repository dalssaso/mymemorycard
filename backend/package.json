{
  "name": "mymemorycard-backend",
  "version": "1.3.0",
  "license": "PolyForm-Noncommercial-1.0.0",
  "description": "Game library management backend with Bun",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "SKIP_REDIS_CONNECT=1 bun test --preload ./tests/setup/unit.setup.ts ./tests/unit",
    "test:integration": "bun test ./tests/integration",
    "test:watch": "bun test --watch ./tests/unit",
    "test:coverage": "SKIP_REDIS_CONNECT=1 bun test --coverage --preload ./tests/setup/unit.setup.ts ./tests/unit",
    "test:coverage:integration": "bun test --coverage ./tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@simplewebauthn/server": "^9.0.3",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.0.0-rc.12",
    "drizzle-orm": "^0.45.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.15.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "redis": "^4.6.12",
    "sharp": "^0.34.5",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.11.0",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "typescript-language-server": "^5.1.3"
  }
}
